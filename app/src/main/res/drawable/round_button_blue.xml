<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_enabled="false" >
	<shape xmlns:android="http://schemas.android.com/apk/res/android" 
			android:shape="oval">
		<solid android:color="@color/lightgrey_100p"/>
		<stroke android:width="3sp" android:color="@color/white_100p" />
	</shape>
</item>
<item android:state_pressed="true" >
	<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    		android:shape="oval">
    	<solid android:color="@color/lightblue_100p"/>
    	<stroke android:width="3sp" android:color="@color/white_100p" />
	</shape>
</item>
<item android:state_focused="true">
	<shape xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:shape="oval">
	    <solid android:color="@color/lightblue_100p"/>
	    <stroke android:width="3sp" android:color="@color/white_100p" />
	</shape>
 </item>  
<item >
	<shape xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:shape="oval">
	    <solid android:color="@color/darkestblue_100p"/>
	    <stroke android:width="3sp" android:color="@color/white_100p" />
	</shape>
 </item>
</selector>
